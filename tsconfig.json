{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowJs": true,
    "rootDir": "app",
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "config",
    "res"
  ]
}
